<?xml version="1.0" encoding="utf-8" ?>

<Defs>

<!-- Utility Knife -->
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
	<defName>KIT_MeleeWeapon_UtilityKnife</defName>
	<label>utility knife</label>
	<description>Sovietic utility knife was a standard issue melee weapon for most of the military forces.</description>
  <techLevel>Industrial</techLevel>
	<graphicData>
		<texPath>Things/WeaponMelee/UtilityKnife</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
    <weaponTags>
      <li>IndustrialMeleeBasic</li>
    </weaponTags>
    <costStuffCount>40</costStuffCount>
	<statBases>
		<WorkToMake>8000</WorkToMake>
		<Mass>0.4</Mass>
	</statBases>
	<equippedStatOffsets>
		<GeneralLaborSpeed>0.15</GeneralLaborSpeed>
	</equippedStatOffsets>   
	<equippedAngleOffset>-65</equippedAngleOffset>
	<stuffCategories>
		<li>Metallic</li>
	</stuffCategories>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>12</power>
		<armorPenetration>0.15</armorPenetration>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
	<recipeMaker>
	  <recipeUsers>
		<li>FueledSmithy</li>
		<li>ElectricSmithy</li>
	  </recipeUsers>
      <researchPrerequisite>KIT_EarlyGunsmithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
</Defs>