<Defs>

<!-- Semi Automatic Pistol -->
  <ThingDef ParentName="BaseBullet">
    <defName>KIT_Bullet_SemiAutomaticPistol</defName>
    <label>semi automatic pistol bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_EarlyGunsmith</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>8</damageAmountBase>
      <speed>50</speed>
    </projectile>
  </ThingDef>
  
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>KIT_Gun_SemiAutomaticPistol</defName>
    <label>semi automatic pistol</label>
    <description>The first semi automatic pistol, slower than usual, but stronger.</description> <!-- adjust -->
    <techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Things/WeaponRanged/SemiAutomaticPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <weaponClasses>
      <li>RangedLight</li>
      <li>ShortShots</li>
    </weaponClasses>
    <recipeMaker>
	  <recipeUsers>
		<li>TableMachining</li>
	  </recipeUsers>
      <researchPrerequisite>KIT_EarlyGunsmithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <Mass>1.6</Mass>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>2.4</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>KIT_Bullet_SemiAutomaticPistol</defaultProjectile>
        <warmupTime>0.6</warmupTime>
        <range>19.9</range>
        <soundCast>KIT_SemiAutomaticPistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>6</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>SimpleGun</li>
	    <li>Pistol</li>
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

